{% extends 'base.html.twig' %}

{% block title %}Registra la tua Palestra - FITTY HUB{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-primary-600 to-primary-800 px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-4xl mx-auto">
        {# Logo and Title #}
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-white rounded-full shadow-lg mb-4">
                <span class="text-4xl">üèãÔ∏è</span>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">FITTY HUB</h1>
            <p class="text-primary-100 text-xl">Registra la tua Palestra</p>
            <p class="text-primary-200 text-sm mt-2">Gestisci la tua struttura sportiva in modo professionale</p>
        </div>

        {# Registration Card #}
        <div class="bg-white rounded-2xl shadow-2xl p-8">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-6 p-4 rounded-lg {% if label == 'success' %}bg-green-50 border border-green-200{% else %}bg-red-50 border border-red-200{% endif %}">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-2 {% if label == 'success' %}text-green-600{% else %}text-red-600{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <p class="text-sm font-medium {% if label == 'success' %}text-green-800{% else %}text-red-800{% endif %}">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Form #}
            <form method="post" action="{{ path('gym_register') }}">
                {# Step 1: Administrator Info #}
                <div class="mb-8">
                    <div class="flex items-center mb-6">
                        <div class="w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-3">
                            1
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">Dati Amministratore</h3>
                            <p class="text-sm text-gray-600">Chi gestir√† la palestra?</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 ml-13">
                        {# First Name #}
                        <div>
                            <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">
                                Nome Amministratore *
                            </label>
                            <input
                                type="text"
                                id="first_name"
                                name="first_name"
                                required
                                placeholder="Mario"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Last Name #}
                        <div>
                            <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">
                                Cognome Amministratore *
                            </label>
                            <input
                                type="text"
                                id="last_name"
                                name="last_name"
                                required
                                placeholder="Rossi"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Email #}
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Amministratore *
                            </label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                required
                                placeholder="admin@palestra.com"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Password #}
                        <div>
                            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                                Password *
                            </label>
                            <input
                                type="password"
                                id="password"
                                name="password"
                                required
                                minlength="6"
                                placeholder="Minimo 6 caratteri"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Phone #}
                        <div class="md:col-span-2">
                            <label for="phone_number" class="block text-sm font-medium text-gray-700 mb-2">
                                Telefono Amministratore
                            </label>
                            <input
                                type="tel"
                                id="phone_number"
                                name="phone_number"
                                placeholder="+39 123 456 7890"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>
                    </div>
                </div>

                {# Divider #}
                <div class="border-t border-gray-200 my-8"></div>

                {# Step 2: Gym Info #}
                <div class="mb-8">
                    <div class="flex items-center mb-6">
                        <div class="w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold mr-3">
                            2
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">Dati Palestra</h3>
                            <p class="text-sm text-gray-600">Informazioni sulla struttura sportiva</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 ml-13">
                        {# Gym Name #}
                        <div class="md:col-span-2">
                            <label for="gym_name" class="block text-sm font-medium text-gray-700 mb-2">
                                Nome Palestra *
                            </label>
                            <input
                                type="text"
                                id="gym_name"
                                name="gym_name"
                                required
                                placeholder="es. FitGym Milano Centro"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Description #}
                        <div class="md:col-span-2">
                            <label for="gym_description" class="block text-sm font-medium text-gray-700 mb-2">
                                Descrizione
                            </label>
                            <textarea
                                id="gym_description"
                                name="gym_description"
                                rows="3"
                                placeholder="Breve descrizione della palestra..."
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            ></textarea>
                        </div>

                        {# Address #}
                        <div class="md:col-span-2">
                            <label for="gym_address" class="block text-sm font-medium text-gray-700 mb-2">
                                Indirizzo *
                            </label>
                            <input
                                type="text"
                                id="gym_address"
                                name="gym_address"
                                required
                                placeholder="Via Roma 123"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# City #}
                        <div>
                            <label for="gym_city" class="block text-sm font-medium text-gray-700 mb-2">
                                Citt√† *
                            </label>
                            <input
                                type="text"
                                id="gym_city"
                                name="gym_city"
                                required
                                placeholder="Milano"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Postal Code #}
                        <div>
                            <label for="gym_postal_code" class="block text-sm font-medium text-gray-700 mb-2">
                                CAP *
                            </label>
                            <input
                                type="text"
                                id="gym_postal_code"
                                name="gym_postal_code"
                                required
                                placeholder="20100"
                                pattern="[0-9]{5}"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                        </div>

                        {# Gym Phone #}
                        <div>
                            <label for="gym_phone_number" class="block text-sm font-medium text-gray-700 mb-2">
                                Telefono Palestra
                            </label>
                            <input
                                type="tel"
                                id="gym_phone_number"
                                name="gym_phone_number"
                                placeholder="+39 02 1234567"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                            <p class="mt-1 text-xs text-gray-500">Se vuoto, user√† il telefono dell'amministratore</p>
                        </div>

                        {# Gym Email #}
                        <div>
                            <label for="gym_email" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Palestra
                            </label>
                            <input
                                type="email"
                                id="gym_email"
                                name="gym_email"
                                placeholder="info@palestra.com"
                                class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                            >
                            <p class="mt-1 text-xs text-gray-500">Se vuoto, user√† l'email dell'amministratore</p>
                        </div>
                    </div>
                </div>

                {# Submit Button #}
                <div class="border-t border-gray-200 pt-6">
                    <button
                        type="submit"
                        class="w-full flex justify-center py-4 px-6 border border-transparent rounded-lg shadow-lg text-lg font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
                    >
                        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Registra Palestra
                    </button>
                </div>
            </form>

            {# Divider #}
            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Oppure</span>
                    </div>
                </div>
            </div>

            {# Login Links #}
            <div class="mt-6 text-center space-y-2">
                <p class="text-sm text-gray-600">
                    Hai gi√† registrato la tua palestra?
                    <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:text-primary-500">
                        Accedi come Admin
                    </a>
                </p>
                <p class="text-sm text-gray-600">
                    Sei un cliente?
                    <a href="{{ path('app_register') }}" class="font-medium text-primary-600 hover:text-primary-500">
                        Registrati qui
                    </a>
                </p>
            </div>
        </div>

        {# Benefits Section #}
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-white">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-lg mb-2">Gestione Clienti</h3>
                <p class="text-sm text-primary-100">Monitora iscrizioni, certificati medici e abbonamenti</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-white">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-lg mb-2">Team di PT</h3>
                <p class="text-sm text-primary-100">Invita e gestisci personal trainer professionisti</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 text-white">
                <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <h3 class="font-semibold text-lg mb-2">Statistiche</h3>
                <p class="text-sm text-primary-100">Dashboard completa con analytics e reportistica</p>
            </div>
        </div>

        {# Footer #}
        <div class="mt-8 text-center">
            <p class="text-sm text-primary-100">
                ¬© 2024 FITTY HUB. Tutti i diritti riservati.
            </p>
        </div>
    </div>
</div>
{% endblock %}
