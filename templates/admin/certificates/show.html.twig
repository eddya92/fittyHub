{% extends 'admin/base.html.twig' %}

{% block page_title %}Revisione Certificato Medico{% endblock %}
{% block page_subtitle %}Certificato di {{ certificate.user.firstName }} {{ certificate.user.lastName }}{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_certificates') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna alla lista
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# PDF Viewer - Main Content #}
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6 border-b border-gray-200 flex items-center justify-between">
                <h3 class="text-lg font-semibold text-gray-900">Documento PDF</h3>
                <span class="px-3 py-1 text-sm font-medium rounded-full
                    {% if certificate.status == 'approved' %}bg-green-100 text-green-800
                    {% elseif certificate.status == 'rejected' %}bg-red-100 text-red-800
                    {% elseif certificate.status == 'expired' %}bg-orange-100 text-orange-800
                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                    {{ certificate.status|upper|replace({'_': ' '}) }}
                </span>
            </div>

            {# PDF Embed #}
            <div class="bg-gray-100">
                {% if certificate.filePath %}
                    <iframe
                        src="/uploads/medical_certificates/{{ certificate.filePath }}"
                        class="w-full"
                        style="height: 800px;"
                        frameborder="0"
                    ></iframe>
                {% else %}
                    <div class="p-12 text-center">
                        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                        <p class="text-gray-500 font-medium">File PDF non disponibile</p>
                    </div>
                {% endif %}
            </div>

            {# Download Button #}
            {% if certificate.filePath %}
                <div class="p-4 bg-gray-50 border-t border-gray-200">
                    <a
                        href="/uploads/medical_certificates/{{ certificate.filePath }}"
                        download
                        class="inline-flex items-center px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
                    >
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Scarica PDF
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    {# Sidebar - Certificate Info & Actions #}
    <div class="lg:col-span-1 space-y-6">
        {# User Info Card #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-600 mb-4">Informazioni Utente</h3>

            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                    <span class="text-primary-600 font-bold">
                        {{ certificate.user.firstName|slice(0, 1) ~ certificate.user.lastName|slice(0, 1) }}
                    </span>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900">
                        {{ certificate.user.firstName }} {{ certificate.user.lastName }}
                    </p>
                    <p class="text-xs text-gray-500">{{ certificate.user.email }}</p>
                </div>
            </div>

            <div class="space-y-3">
                {% if certificate.user.phoneNumber %}
                    <div>
                        <p class="text-xs text-gray-600">Telefono</p>
                        <p class="text-sm font-medium text-gray-900">{{ certificate.user.phoneNumber }}</p>
                    </div>
                {% endif %}

                {% if certificate.user.dateOfBirth %}
                    <div>
                        <p class="text-xs text-gray-600">Data di Nascita</p>
                        <p class="text-sm font-medium text-gray-900">{{ certificate.user.dateOfBirth|date('d/m/Y') }}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Certificate Info Card #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-600 mb-4">Dettagli Certificato</h3>

            <div class="space-y-4">
                <div>
                    <p class="text-xs text-gray-600">Tipo Certificato</p>
                    <p class="text-sm font-medium text-gray-900">
                        {% if certificate.certificateType == 'agonistic' %}
                            <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-xs font-medium">Agonistico</span>
                        {% elseif certificate.certificateType == 'non_agonistic' %}
                            <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs font-medium">Non Agonistico</span>
                        {% else %}
                            {{ certificate.certificateType }}
                        {% endif %}
                    </p>
                </div>

                <div>
                    <p class="text-xs text-gray-600">Data Scadenza</p>
                    <p class="text-base font-bold text-gray-900">{{ certificate.expiryDate|date('d/m/Y') }}</p>
                    {% set today = 'now'|date('Y-m-d') %}
                    {% set daysRemaining = certificate.expiryDate.diff(date(today)).days %}
                    {% if daysRemaining > 0 %}
                        <p class="text-xs text-gray-500 mt-1">Scade tra {{ daysRemaining }} giorni</p>
                    {% else %}
                        <p class="text-xs text-red-600 mt-1">Scaduto</p>
                    {% endif %}
                </div>

                <div>
                    <p class="text-xs text-gray-600">Data Caricamento</p>
                    <p class="text-sm font-medium text-gray-900">{{ certificate.uploadedAt|date('d/m/Y H:i') }}</p>
                </div>

                {% if certificate.notes %}
                    <div>
                        <p class="text-xs text-gray-600">Note</p>
                        <p class="text-sm text-gray-700 bg-gray-50 p-2 rounded">{{ certificate.notes }}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Actions Card #}
        {% if certificate.status == 'pending_review' %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-sm font-medium text-gray-600 mb-4">Azioni Revisione</h3>

                <div class="space-y-3">
                    <form method="post" action="{{ path('admin_certificate_approve', {'id': certificate.id}) }}" onsubmit="return confirm('Sei sicuro di voler approvare questo certificato?');">
                        <button type="submit" class="w-full px-4 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Approva Certificato
                        </button>
                    </form>

                    <form method="post" action="{{ path('admin_certificate_reject', {'id': certificate.id}) }}" onsubmit="return confirm('Sei sicuro di voler rifiutare questo certificato?');">
                        <button type="submit" class="w-full px-4 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium">
                            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Rifiuta Certificato
                        </button>
                    </form>
                </div>
            </div>
        {% endif %}

        {# Info Alert #}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-blue-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="text-sm text-blue-800">
                    <p class="font-medium mb-1">Promemoria</p>
                    <p>Verifica attentamente tutti i dati del certificato prima di approvarlo. Una volta approvato, l'utente potr√† accedere alla palestra.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
