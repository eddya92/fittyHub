{% extends 'admin/base.html.twig' %}

{% block page_title %}Check-in - {{ course.name }}{% endblock %}
{% block page_subtitle %}{{ session.sessionDate|date('d/m/Y') }} - {{ session.schedule.startTime|date('H:i') }}{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_course_session_show', {'sessionId': session.id}) }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna alla sessione
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main Content #}
    <div class="lg:col-span-2 space-y-6">
        {# Check-in Form #}
        {% if session.isToday %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Effettua Check-in</h3>
            <form method="post" action="{{ path('admin_course_session_checkin', {'sessionId': session.id}) }}" class="space-y-4">
                <div>
                    <label for="user_id" class="block text-sm font-medium text-gray-700 mb-2">Seleziona Utente Iscritto</label>
                    <select name="user_id" id="user_id" class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" required>
                        <option value="">-- Seleziona utente --</option>
                        {% for enrollment in enrollments %}
                            {% if enrollment.status == 'active' %}
                            <option value="{{ enrollment.user.id }}">
                                {{ enrollment.user.firstName }} {{ enrollment.user.lastName }}
                            </option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="w-full bg-primary-600 text-white px-4 py-2 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                    Effettua Check-in
                </button>
            </form>
        </div>
        {% else %}
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-start">
                <svg class="w-5 h-5 text-yellow-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <div>
                    <h4 class="text-sm font-medium text-yellow-800 mb-1">Check-in non disponibile</h4>
                    <p class="text-sm text-yellow-700">
                        Il check-in è disponibile solo il giorno della sessione.
                    </p>
                </div>
            </div>
        </div>
        {% endif %}

        {# Attendance List #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Presenze Registrate</h3>
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-primary-100 text-primary-800">
                    {{ attendances|length }} presenze
                </span>
            </div>

            {% if attendances|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utente</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Orario Check-in</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Note</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for attendance in attendances %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10 bg-primary-100 rounded-full flex items-center justify-center">
                                        <span class="text-primary-600 font-semibold text-sm">
                                            {{ attendance.user.firstName|first }}{{ attendance.user.lastName|first }}
                                        </span>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ attendance.user.firstName }} {{ attendance.user.lastName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ attendance.user.email }}
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900 font-medium">{{ attendance.checkInTime|date('H:i') }}</div>
                                <div class="text-sm text-gray-500">{{ attendance.checkInTime|date('d/m/Y') }}</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500">
                                    {{ attendance.notes|default('—') }}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <h4 class="mt-4 text-sm font-medium text-gray-900">Nessuna presenza registrata</h4>
                <p class="mt-2 text-sm text-gray-500">
                    Non ci sono ancora check-in per questa sessione.
                </p>
            </div>
            {% endif %}
        </div>
    </div>

    {# Sidebar #}
    <div class="space-y-6">
        {# Session Info #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Info Sessione</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm text-gray-600">Data</dt>
                    <dd class="text-sm font-medium text-gray-900 mt-1">
                        {{ session.sessionDate|date('d/m/Y') }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600">Orario</dt>
                    <dd class="text-sm font-medium text-gray-900 mt-1">
                        {{ session.schedule.startTime|date('H:i') }} - {{ session.schedule.endTime|date('H:i') }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600">Corso</dt>
                    <dd class="text-sm font-medium text-gray-900 mt-1">
                        {{ course.name }}
                    </dd>
                </div>
                {% if course.category %}
                <div>
                    <dt class="text-sm text-gray-600">Categoria</dt>
                    <dd class="flex items-center gap-2 mt-1">
                        <div class="w-3 h-3 rounded" style="background-color: {{ course.category.color }}"></div>
                        <span class="text-sm font-medium text-gray-900">{{ course.category.name }}</span>
                    </dd>
                </div>
                {% endif %}
                <div>
                    <dt class="text-sm text-gray-600">Posti</dt>
                    <dd class="text-sm font-medium text-gray-900 mt-1">
                        {{ session.activeEnrollmentsCount }} / {{ session.maxParticipants ?? '∞' }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600">Stato</dt>
                    <dd class="mt-1">
                        {% if session.isToday %}
                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                OGGI
                            </span>
                        {% elseif session.isInPast %}
                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">
                                PASSATA
                            </span>
                        {% else %}
                            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                                PROGRAMMATA
                            </span>
                        {% endif %}
                    </dd>
                </div>
            </dl>
        </div>

        {# Stats #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Statistiche</h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm text-gray-600">Iscritti</dt>
                    <dd class="text-2xl font-bold text-gray-900 mt-1">
                        {{ session.activeEnrollmentsCount }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600">Presenze</dt>
                    <dd class="text-2xl font-bold text-primary-600 mt-1">
                        {{ attendances|length }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm text-gray-600">Tasso partecipazione</dt>
                    <dd class="text-2xl font-bold text-gray-900 mt-1">
                        {% if session.activeEnrollmentsCount > 0 %}
                            {{ ((attendances|length / session.activeEnrollmentsCount) * 100)|number_format(0) }}%
                        {% else %}
                            0%
                        {% endif %}
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</div>
{% endblock %}