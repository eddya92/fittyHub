{% extends 'admin/base.html.twig' %}

{% block page_title %}Report Partecipazione Corsi{% endblock %}
{% block page_subtitle %}Analisi presenze e statistiche{% endblock %}

{% block content %}
<div class="mb-6">
    <div class="flex items-center justify-between">
        <a href="{{ path('admin_courses') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Torna ai corsi
        </a>
    </div>
</div>

{# Filtri Data #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form method="get" class="flex flex-wrap gap-4 items-end">
        <div class="flex-1 min-w-[200px]">
            <label for="from" class="block text-sm font-medium text-gray-700 mb-2">Data Inizio</label>
            <input type="date" name="from" id="from" value="{{ from|date('Y-m-d') }}"
                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
        </div>
        <div class="flex-1 min-w-[200px]">
            <label for="to" class="block text-sm font-medium text-gray-700 mb-2">Data Fine</label>
            <input type="date" name="to" id="to" value="{{ to|date('Y-m-d') }}"
                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
        </div>
        <button type="submit" class="bg-primary-600 text-white px-6 py-2 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
            Applica Filtri
        </button>
    </form>
</div>

{# Summary Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Corsi Attivi</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ courses|length }}</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
            </div>
        </div>
    </div>

    {% set totalSessions = 0 %}
    {% set totalAttendances = 0 %}
    {% set totalParticipants = 0 %}
    {% for data in reportsData %}
        {% set totalSessions = totalSessions + data.stats.total_sessions %}
        {% set totalAttendances = totalAttendances + data.stats.total_attendances %}
        {% set totalParticipants = totalParticipants + data.stats.unique_participants %}
    {% endfor %}

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Sessioni Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ totalSessions }}</p>
            </div>
            <div class="p-3 bg-green-100 rounded-full">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Presenze Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ totalAttendances }}</p>
            </div>
            <div class="p-3 bg-purple-100 rounded-full">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Partecipanti Unici</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ totalParticipants }}</p>
            </div>
            <div class="p-3 bg-orange-100 rounded-full">
                <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Reports Table #}
<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Report per Corso</h3>
    </div>

    {% if reportsData|length > 0 %}
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Corso</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Sessioni</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Presenze</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Partecipanti</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Tasso %</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for data in reportsData %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{{ data.course.name }}</div>
                        {% if data.course.instructor %}
                        <div class="text-sm text-gray-500">
                            {{ data.course.instructor.user.firstName }} {{ data.course.instructor.user.lastName }}
                        </div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if data.course.category %}
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded" style="background-color: {{ data.course.category.color }}"></div>
                            <span class="text-sm text-gray-900">{{ data.course.category.name }}</span>
                        </div>
                        {% else %}
                        <span class="text-sm text-gray-500">â€”</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        <span class="text-sm font-medium text-gray-900">{{ data.stats.total_sessions }}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        <span class="text-sm font-medium text-gray-900">{{ data.stats.total_attendances }}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        <span class="text-sm font-medium text-gray-900">{{ data.stats.unique_participants }}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        {% set rate = data.stats.average_rate %}
                        <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                            {% if rate >= 80 %}bg-green-100 text-green-800
                            {% elseif rate >= 50 %}bg-yellow-100 text-yellow-800
                            {% else %}bg-red-100 text-red-800
                            {% endif %}">
                            {{ rate }}%
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                        <a href="{{ path('admin_course_report', {'id': data.course.id}) }}?from={{ from|date('Y-m-d') }}&to={{ to|date('Y-m-d') }}"
                           class="text-primary-600 hover:text-primary-900">
                            Dettagli
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="text-center py-12 px-6">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h4 class="mt-4 text-sm font-medium text-gray-900">Nessun dato disponibile</h4>
        <p class="mt-2 text-sm text-gray-500">
            Non ci sono dati per il periodo selezionato.
        </p>
    </div>
    {% endif %}
</div>
{% endblock %}