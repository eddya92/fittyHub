{% extends 'admin/base.html.twig' %}

{% block page_title %}{{ course.name }}{% endblock %}
{% block page_subtitle %}Dettaglio corso e gestione iscrizioni{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_courses') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna ai corsi
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main Content #}
    <div class="lg:col-span-2 space-y-6">
        {# Course Info #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900">Informazioni Corso</h3>
                <div class="flex gap-2">
                    <span class="px-3 py-1 text-sm font-medium rounded-full
                        {% if course.status == 'active' %}bg-green-100 text-green-800
                        {% elseif course.status == 'suspended' %}bg-orange-100 text-orange-800
                        {% else %}bg-red-100 text-red-800{% endif %}">
                        {{ course.status|upper }}
                    </span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div>
                    <p class="text-sm text-gray-600 mb-1">Categoria</p>
                    {% if course.category %}
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded" style="background-color: {{ course.category.color }}"></div>
                            <p class="text-base font-medium text-gray-900">{{ course.category.name }}</p>
                        </div>
                    {% else %}
                        <p class="text-base text-gray-400">Nessuna categoria</p>
                    {% endif %}
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Max Partecipanti</p>
                    <p class="text-base font-medium text-gray-900">{{ course.maxParticipants }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Orari Settimanali</p>
                    <p class="text-base font-medium text-gray-900">{{ course.schedules|length }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">Stato</p>
                    <p class="text-base font-medium {% if course.isActive %}text-green-600{% else %}text-red-600{% endif %}">
                        {{ course.status|upper }}
                    </p>
                </div>
                {% if course.instructor %}
                <div class="col-span-2">
                    <p class="text-sm text-gray-600 mb-1">Istruttore</p>
                    <p class="text-base font-medium text-gray-900">
                        {{ course.instructor.user.firstName }} {{ course.instructor.user.lastName }}
                    </p>
                </div>
                {% endif %}
            </div>

            {% if course.description %}
            <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-sm text-gray-600 mb-2">Descrizione</p>
                <p class="text-base text-gray-900">{{ course.description }}</p>
            </div>
            {% endif %}
        </div>

        {# Schedules #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Orari Settimanali</h3>

            {% if course.schedules|length > 0 %}
                <div class="space-y-3 mb-6">
                    {% for schedule in course.schedules %}
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                            <div>
                                <p class="font-medium text-gray-900">{{ schedule.dayOfWeek|title }}</p>
                                <p class="text-sm text-gray-600">
                                    {{ schedule.startTime|date('H:i') }} - {{ schedule.endTime|date('H:i') }}
                                </p>
                            </div>
                            <form method="post" action="{{ path('admin_course_schedule_delete', {'scheduleId': schedule.id}) }}" class="inline" onsubmit="return confirm('Eliminare questo orario?')">
                                <button type="submit" class="text-red-600 hover:text-red-800">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 text-center py-4 mb-6">Nessun orario configurato</p>
            {% endif %}

            {# Add Schedule Form #}
            <form method="post" action="{{ path('admin_course_schedule_add', {'id': course.id}) }}" class="border-t border-gray-200 pt-6">
                <h4 class="font-medium text-gray-900 mb-4">Aggiungi Orario</h4>
                <div class="grid grid-cols-3 gap-4">
                    <select name="day_of_week" required class="px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="">Giorno...</option>
                        <option value="monday">Lunedì</option>
                        <option value="tuesday">Martedì</option>
                        <option value="wednesday">Mercoledì</option>
                        <option value="thursday">Giovedì</option>
                        <option value="friday">Venerdì</option>
                        <option value="saturday">Sabato</option>
                        <option value="sunday">Domenica</option>
                    </select>
                    <input type="time" name="start_time" required placeholder="Ora inizio" class="px-4 py-2 border border-gray-300 rounded-lg">
                    <input type="time" name="end_time" required placeholder="Ora fine" class="px-4 py-2 border border-gray-300 rounded-lg">
                </div>
                <button type="submit" class="mt-4 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
                    Aggiungi Orario
                </button>
            </form>
        </div>

        {# Info gestione iscrizioni #}
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h4 class="text-lg font-semibold text-blue-900 mb-2">Gestione Iscrizioni</h4>
                    <p class="text-sm text-blue-800 mb-3">
                        Gli utenti si iscrivono a <strong>sessioni specifiche</strong> (es. "Lunedì 6 Gennaio 2026 ore 18:00"),
                        non al corso in generale.
                    </p>
                    <div class="bg-white rounded-lg p-4 border border-blue-200">
                        <p class="text-sm font-medium text-gray-900 mb-2">Per gestire gli iscritti:</p>
                        <ol class="text-sm text-gray-700 space-y-1 ml-4 list-decimal">
                            <li>Vai al <a href="{{ path('admin_courses_calendar') }}" class="text-primary-600 hover:text-primary-700 font-medium underline">Calendario Corsi</a></li>
                            <li>Clicca sulla sessione specifica del corso</li>
                            <li>Vedrai la lista degli iscritti solo a quella data/orario</li>
                            <li>Potrai iscrivere o disiscrivere utenti dalla singola sessione</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Sidebar #}
    <div class="space-y-6">
        {# Quick Stats #}
        <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-lg shadow-md p-6 text-white">
            <h3 class="text-lg font-semibold mb-4">Configurazione</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm">Max Partecipanti</span>
                    <span class="text-2xl font-bold">{{ course.maxParticipants }}</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm">Orari Settimanali</span>
                    <span class="text-2xl font-bold">{{ course.schedules|length }}</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm">Stato</span>
                    <span class="text-lg font-bold">{{ course.status|upper }}</span>
                </div>
            </div>
        </div>

        {# Actions #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Azioni</h3>
            <div class="space-y-3">
                <a href="{{ path('admin_course_edit', {'id': course.id}) }}" class="block w-full px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium text-center">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Modifica Corso
                </a>
                <a href="{{ path('admin_courses_calendar') }}" class="block w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium text-center">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Vai al Calendario
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
