{% extends 'admin/base.html.twig' %}

{% block page_title %}Report - {{ course.name }}{% endblock %}
{% block page_subtitle %}Statistiche partecipazione{% endblock %}

{% block content %}
<div class="mb-6">
    <div class="flex items-center justify-between">
        <a href="{{ path('admin_courses_reports') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Torna ai report
        </a>
        <a href="{{ path('admin_course_show', {'id': course.id}) }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
            Dettagli Corso
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</div>

{# Filtri Data #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form method="get" class="flex flex-wrap gap-4 items-end">
        <div class="flex-1 min-w-[200px]">
            <label for="from" class="block text-sm font-medium text-gray-700 mb-2">Data Inizio</label>
            <input type="date" name="from" id="from" value="{{ from ? from|date('Y-m-d') : '' }}"
                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
        </div>
        <div class="flex-1 min-w-[200px]">
            <label for="to" class="block text-sm font-medium text-gray-700 mb-2">Data Fine</label>
            <input type="date" name="to" id="to" value="{{ to ? to|date('Y-m-d') : '' }}"
                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
        </div>
        <button type="submit" class="bg-primary-600 text-white px-6 py-2 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
            Applica Filtri
        </button>
    </form>
</div>

{# Course Info #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Informazioni Corso</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div>
            <p class="text-sm text-gray-600">Nome</p>
            <p class="text-base font-medium text-gray-900 mt-1">{{ course.name }}</p>
        </div>
        {% if course.category %}
        <div>
            <p class="text-sm text-gray-600">Categoria</p>
            <div class="flex items-center gap-2 mt-1">
                <div class="w-3 h-3 rounded" style="background-color: {{ course.category.color }}"></div>
                <p class="text-base font-medium text-gray-900">{{ course.category.name }}</p>
            </div>
        </div>
        {% endif %}
        {% if course.instructor %}
        <div>
            <p class="text-sm text-gray-600">Istruttore</p>
            <p class="text-base font-medium text-gray-900 mt-1">
                {{ course.instructor.user.firstName }} {{ course.instructor.user.lastName }}
            </p>
        </div>
        {% endif %}
        <div>
            <p class="text-sm text-gray-600">Capacità Max</p>
            <p class="text-base font-medium text-gray-900 mt-1">
                {{ course.maxParticipants ?? '∞' }}
            </p>
        </div>
    </div>
</div>

{# Statistics Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Sessioni Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.total_sessions }}</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Presenze Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.total_attendances }}</p>
            </div>
            <div class="p-3 bg-green-100 rounded-full">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Partecipanti Unici</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.unique_participants }}</p>
            </div>
            <div class="p-3 bg-purple-100 rounded-full">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600">Tasso Partecipazione</p>
                <p class="text-3xl font-bold mt-2
                    {% if stats.average_rate >= 80 %}text-green-600
                    {% elseif stats.average_rate >= 50 %}text-yellow-600
                    {% else %}text-red-600
                    {% endif %}">
                    {{ stats.average_rate }}%
                </p>
            </div>
            <div class="p-3
                {% if stats.average_rate >= 80 %}bg-green-100
                {% elseif stats.average_rate >= 50 %}bg-yellow-100
                {% else %}bg-red-100
                {% endif %} rounded-full">
                <svg class="w-8 h-8
                    {% if stats.average_rate >= 80 %}text-green-600
                    {% elseif stats.average_rate >= 50 %}text-yellow-600
                    {% else %}text-red-600
                    {% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Info Box #}
<div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex items-start">
        <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div>
            <h4 class="text-sm font-medium text-blue-800 mb-1">Informazioni sul Report</h4>
            <p class="text-sm text-blue-700">
                Il tasso di partecipazione rappresenta la percentuale media di partecipanti effettivi rispetto agli iscritti per sessione.
                {% if from and to %}
                Report per il periodo dal {{ from|date('d/m/Y') }} al {{ to|date('d/m/Y') }}.
                {% else %}
                Report completo di tutte le sessioni.
                {% endif %}
            </p>
        </div>
    </div>
</div>
{% endblock %}