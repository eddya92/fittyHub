{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex">
    {# Sidebar #}
    <aside class="w-64 bg-gray-900 text-white fixed h-screen flex flex-col">
        <div class="p-6">
            <h1 class="text-2xl font-bold flex items-center">
                <span class="text-3xl mr-2">üèãÔ∏è</span>
                FITTY HUB
            </h1>
            <p class="text-gray-400 text-sm mt-1">Admin Dashboard</p>
        </div>

        <nav class="mt-6 flex-1 overflow-y-auto pb-20">
            {# Dashboard - sempre visibile #}
            <a href="{{ path('admin_dashboard') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_dashboard' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Dashboard
            </a>

            {# Gestione Utenti #}
            <div class="mt-2">
                <button onclick="toggleAccordion('users')" class="w-full flex items-center justify-between px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        <span>Gestione Utenti</span>
                    </div>
                    <svg id="users-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="users-menu" class="hidden bg-gray-800">
                    <a href="{{ path('admin_membership_requests') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_membership_request' %}text-white bg-gray-700{% endif %}">
                        <span class="flex items-center">
                            Richieste Iscrizione
                            {# TODO: Badge con numero richieste pendenti #}
                        </span>
                    </a>
                    <a href="{{ path('admin_memberships') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_membership' and app.request.get('_route') != 'admin_memberships_expiring' and not (app.request.get('_route') starts with 'admin_membership_request') %}text-white bg-gray-700{% endif %}">
                        Iscritti
                    </a>
                    <a href="{{ path('admin_trainers') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_trainers' %}text-white bg-gray-700{% endif %}">
                        Personal Trainer
                    </a>
                    <a href="{{ path('admin_invitations') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_invitations' %}text-white bg-gray-700{% endif %}">
                        Inviti
                    </a>
                </div>
            </div>

            {# Abbonamenti #}
            <div class="mt-2">
                <button onclick="toggleAccordion('subscriptions')" class="w-full flex items-center justify-between px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                        <span>Abbonamenti</span>
                    </div>
                    <svg id="subscriptions-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="subscriptions-menu" class="hidden bg-gray-800">
                    <a href="{{ path('admin_subscription_plans') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_subscription_plan' %}text-white bg-gray-700{% endif %}">
                        Piani Abbonamento
                    </a>
                    <a href="{{ path('admin_memberships_expiring') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') == 'admin_memberships_expiring' %}text-white bg-gray-700{% endif %}">
                        In Scadenza
                    </a>
                    <div class="border-t border-gray-700 my-2"></div>
                    <a href="{{ path('admin_enrollments') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_enrollment' and app.request.get('_route') != 'admin_enrollments_expiring' %}text-white bg-gray-700{% endif %}">
                        Quote Iscrizione
                    </a>
                    <a href="{{ path('admin_enrollments_expiring') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') == 'admin_enrollments_expiring' %}text-white bg-gray-700{% endif %}">
                        Quote in Scadenza
                    </a>
                </div>
            </div>

            {# Corsi #}
            <div class="mt-2">
                <button onclick="toggleAccordion('courses')" class="w-full flex items-center justify-between px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                        <span>Corsi</span>
                    </div>
                    <svg id="courses-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="courses-menu" class="hidden bg-gray-800">
                    <a href="{{ path('admin_courses') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_course' and app.request.get('_route') != 'admin_courses_calendar' and app.request.get('_route') != 'admin_course_category' %}text-white bg-gray-700{% endif %}">
                        Lista Corsi
                    </a>
                    <a href="{{ path('admin_courses_calendar') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') == 'admin_courses_calendar' %}text-white bg-gray-700{% endif %}">
                        Calendario
                    </a>
                    <a href="{{ path('admin_course_categories') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_course_category' %}text-white bg-gray-700{% endif %}">
                        Categorie
                    </a>
                </div>
            </div>

            {# Check-in #}
            <a href="{{ path('admin_check_in') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_check_in' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Check-in Tornello
            </a>

            {# QR Code #}
            <a href="{{ path('admin_qr_code') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_qr_code' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>
                </svg>
                QR Code Palestra
            </a>

            {# Pagamenti #}
            <div class="mt-2">
                <button onclick="toggleAccordion('payments')" class="w-full flex items-center justify-between px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Pagamenti</span>
                    </div>
                    <svg id="payments-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="payments-menu" class="hidden bg-gray-800">
                    <a href="{{ path('admin_payments') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') starts with 'admin_payment' and app.request.get('_route') != 'admin_payment_reports' %}text-white bg-gray-700{% endif %}">
                        Registro Pagamenti
                    </a>
                    <a href="{{ path('admin_payment_new') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') == 'admin_payment_new' %}text-white bg-gray-700{% endif %}">
                        Registra Pagamento
                    </a>
                    <a href="{{ path('admin_payment_reports') }}" class="flex items-center pl-14 pr-6 py-2 text-sm text-gray-400 hover:text-white hover:bg-gray-700 transition-colors {% if app.request.get('_route') == 'admin_payment_reports' %}text-white bg-gray-700{% endif %}">
                        Report Finanziari
                    </a>
                </div>
            </div>

            {# Impostazioni #}
            <a href="{{ path('admin_settings') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_settings' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Impostazioni
            </a>

            <div class="border-t border-gray-800 my-2"></div>

            <div class="px-6 py-3">
                <div class="flex items-center mb-3">
                    <div class="w-8 h-8 rounded-full bg-primary-600 flex items-center justify-center flex-shrink-0">
                        <span class="text-white text-xs font-bold">{{ app.user ? app.user.firstName|slice(0, 1) ~ app.user.lastName|slice(0, 1) : 'A' }}</span>
                    </div>
                    <div class="ml-3 min-w-0">
                        <p class="text-sm font-medium text-white truncate">{{ app.user ? app.user.firstName ~ ' ' ~ app.user.lastName : 'Admin' }}</p>
                        <p class="text-xs text-gray-400">Amministratore</p>
                    </div>
                </div>
            </div>

            <a href="{{ path('app_logout') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                Logout
            </a>
        </nav>
    </aside>

    {# Main Content #}
    <main class="flex-1 ml-64">
        {# Header #}
        <header class="bg-white shadow-sm">
            <div class="px-8 py-6">
                <h2 class="text-2xl font-bold text-gray-900">
                    {% block page_title %}Dashboard{% endblock %}
                </h2>
                <p class="text-gray-600 mt-1">
                    {% block page_subtitle %}Panoramica generale{% endblock %}
                </p>
            </div>
        </header>

        {# Flash Messages #}
        <div class="px-8 py-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-50 text-green-800{% elseif label == 'error' %}bg-red-50 text-red-800{% else %}bg-blue-50 text-blue-800{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {# Page Content #}
        <div class="px-8 py-6">
            {% block content %}{% endblock %}
        </div>
    </main>
</div>

<script>
function toggleAccordion(menuId) {
    const menu = document.getElementById(menuId + '-menu');
    const icon = document.getElementById(menuId + '-icon');

    if (menu.classList.contains('hidden')) {
        menu.classList.remove('hidden');
        icon.style.transform = 'rotate(180deg)';
    } else {
        menu.classList.add('hidden');
        icon.style.transform = 'rotate(0deg)';
    }
}

// Auto-expand accordion if current route is inside it
document.addEventListener('DOMContentLoaded', function() {
    const currentRoute = '{{ app.request.get('_route') }}';

    // Gestione Utenti accordion
    if ((currentRoute.startsWith('admin_membership') && currentRoute !== 'admin_memberships_expiring') ||
        currentRoute.startsWith('admin_trainers') ||
        currentRoute.startsWith('admin_invitations')) {
        const usersMenu = document.getElementById('users-menu');
        const usersIcon = document.getElementById('users-icon');
        usersMenu.classList.remove('hidden');
        usersIcon.style.transform = 'rotate(180deg)';
    }

    // Abbonamenti accordion
    if (currentRoute.startsWith('admin_subscription_plan') ||
        currentRoute === 'admin_memberships_expiring' ||
        currentRoute.startsWith('admin_enrollment')) {
        const subscriptionsMenu = document.getElementById('subscriptions-menu');
        const subscriptionsIcon = document.getElementById('subscriptions-icon');
        subscriptionsMenu.classList.remove('hidden');
        subscriptionsIcon.style.transform = 'rotate(180deg)';
    }

    // Corsi accordion
    if (currentRoute.startsWith('admin_course')) {
        const coursesMenu = document.getElementById('courses-menu');
        const coursesIcon = document.getElementById('courses-icon');
        coursesMenu.classList.remove('hidden');
        coursesIcon.style.transform = 'rotate(180deg)';
    }
});
</script>
{% endblock %}
