{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex">
    {# Sidebar #}
    <aside class="w-64 bg-gray-900 text-white">
        <div class="p-6">
            <h1 class="text-2xl font-bold flex items-center">
                <span class="text-3xl mr-2">üèãÔ∏è</span>
                FITTY HUB
            </h1>
            <p class="text-gray-400 text-sm mt-1">Admin Dashboard</p>
        </div>

        <nav class="mt-6">
            <a href="{{ path('admin_dashboard') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_dashboard' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Dashboard
            </a>

            <a href="{{ path('admin_memberships') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_memberships' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Iscritti
            </a>

            <a href="{{ path('admin_trainers') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_trainers' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                Personal Trainer
            </a>

            <a href="{{ path('admin_invitations') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_invitations' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Inviti
            </a>

            <a href="{{ path('admin_courses') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_course' and app.request.get('_route') != 'admin_courses_calendar' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                Corsi
            </a>

            <a href="{{ path('admin_courses_calendar') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') == 'admin_courses_calendar' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Calendario Corsi
            </a>

            <a href="{{ path('admin_course_categories') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_course_category' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                Categorie Corsi
            </a>

            <a href="{{ path('admin_settings') }}" class="flex items-center px-6 py-3 text-gray-300 hover:bg-gray-800 hover:text-white transition-colors {% if app.request.get('_route') starts with 'admin_settings' %}bg-gray-800 text-white{% endif %}">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Impostazioni
            </a>
        </nav>

        <div class="absolute bottom-0 w-64 p-6 border-t border-gray-800">
            <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-primary-600 flex items-center justify-center">
                    <span class="text-white font-bold">{{ app.user ? app.user.firstName|slice(0, 1) ~ app.user.lastName|slice(0, 1) : 'A' }}</span>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">{{ app.user ? app.user.firstName ~ ' ' ~ app.user.lastName : 'Admin' }}</p>
                    <p class="text-xs text-gray-400">Amministratore</p>
                </div>
            </div>
            <a href="{{ path('app_logout') }}" class="mt-4 block text-center px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-sm transition-colors">
                Logout
            </a>
        </div>
    </aside>

    {# Main Content #}
    <main class="flex-1">
        {# Header #}
        <header class="bg-white shadow-sm">
            <div class="px-8 py-6">
                <h2 class="text-2xl font-bold text-gray-900">
                    {% block page_title %}Dashboard{% endblock %}
                </h2>
                <p class="text-gray-600 mt-1">
                    {% block page_subtitle %}Panoramica generale{% endblock %}
                </p>
            </div>
        </header>

        {# Flash Messages #}
        <div class="px-8 py-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-50 text-green-800{% elseif label == 'error' %}bg-red-50 text-red-800{% else %}bg-blue-50 text-blue-800{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {# Page Content #}
        <div class="px-8 py-6">
            {% block content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}
