{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestione Personal Trainer{% endblock %}
{% block page_subtitle %}Visualizza e gestisci il team di personal trainer{% endblock %}

{% block content %}
{# Filters #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form method="get" action="{{ path('admin_trainers') }}" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label for="search" class="block text-sm font-medium text-gray-700 mb-2">Cerca Trainer</label>
            <input
                type="text"
                id="search"
                name="search"
                value="{{ current_search }}"
                placeholder="Nome, cognome o email..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            >
        </div>

        <div>
            <label for="specialization" class="block text-sm font-medium text-gray-700 mb-2">Specializzazione</label>
            <input
                type="text"
                id="specialization"
                name="specialization"
                value="{{ current_specialization }}"
                placeholder="es. Bodybuilding, Crossfit..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            >
        </div>

        <div class="flex items-end">
            <button
                type="submit"
                class="w-full px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
            >
                Filtra
            </button>
        </div>

        <div class="flex items-end">
            <a
                href="{{ path('admin_trainers') }}"
                class="w-full px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium text-center"
            >
                Reset
            </a>
        </div>
    </form>
</div>

{# Trainers Grid #}
{% if trainers|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for trainer in trainers %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                {# Header with gradient #}
                <div class="bg-gradient-to-r from-primary-600 to-primary-700 p-6 text-white">
                    <div class="flex items-center">
                        <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
                            <span class="text-white font-bold text-2xl">
                                {{ trainer.user.firstName|slice(0, 1) ~ trainer.user.lastName|slice(0, 1) }}
                            </span>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold">
                                {{ trainer.user.firstName }} {{ trainer.user.lastName }}
                            </h3>
                            <p class="text-sm text-white/80">Personal Trainer</p>
                        </div>
                    </div>
                </div>

                {# Content #}
                <div class="p-6">
                    {# Contact Info #}
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center text-sm text-gray-600">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <span class="truncate">{{ trainer.user.email }}</span>
                        </div>
                        {% if trainer.user.phoneNumber %}
                            <div class="flex items-center text-sm text-gray-600">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                {{ trainer.user.phoneNumber }}
                            </div>
                        {% endif %}
                    </div>

                    {# Bio #}
                    {% if trainer.biography %}
                        <div class="mb-4">
                            <p class="text-sm text-gray-700 line-clamp-3">{{ trainer.biography }}</p>
                        </div>
                    {% endif %}

                    {# Specialization #}
                    {% if trainer.specialization %}
                        <div class="mb-4">
                            <p class="text-xs font-medium text-gray-600 mb-2">Specializzazione:</p>
                            <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
                                {{ trainer.specialization }}
                            </span>
                        </div>
                    {% endif %}

                    {# Certifications #}
                    {% if trainer.certifications %}
                        <div class="mb-4">
                            <p class="text-xs font-medium text-gray-600 mb-2">Certificazioni:</p>
                            <div class="flex flex-wrap gap-1">
                                {% for certification in trainer.certifications %}
                                    <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">
                                        {{ certification }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Stats #}
                    <div class="border-t border-gray-200 pt-4 mt-4">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-600">Anni Esperienza:</span>
                            <span class="font-medium text-gray-900">{{ trainer.experience ?? 0 }}</span>
                        </div>
                    </div>

                    {# Action Button #}
                    <div class="mt-4">
                        <a
                            href="{{ path('admin_trainer_show', {'id': trainer.id}) }}"
                            class="block w-full px-4 py-2 bg-primary-600 text-white text-center rounded-lg hover:bg-primary-700 transition-colors font-medium"
                        >
                            Vedi Dettagli â†’
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <p class="text-lg font-medium text-gray-900 mb-2">Nessun Personal Trainer trovato</p>
        <p class="text-sm text-gray-600 mb-6">Prova a modificare i filtri di ricerca o invita nuovi trainer al team</p>
        <a
            href="{{ path('admin_invitations') }}"
            class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
        >
            Invita Personal Trainer
        </a>
    </div>
{% endif %}
{% endblock %}
