{% extends 'admin/base.html.twig' %}

{% block page_title %}Dashboard{% endblock %}
{% block page_subtitle %}Benvenuto nel pannello amministrativo di FITTY HUB{% endblock %}

{% block content %}

{# ALERT SECTION #}
{% set hasAlerts = alerts.expired_certificates|length > 0 or alerts.expiring_certificates|length > 0 or alerts.expiring_memberships|length > 0 or alerts.pending_invitations|length > 0 or alerts.pending_requests|length > 0 %}

{% if hasAlerts %}
<div class="mb-6 space-y-4">
    {# Certificati scaduti - CRITICO #}
    {% if alerts.expired_certificates|length > 0 %}
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
        <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div class="flex-1">
                <h3 class="text-red-800 font-semibold">{{ alerts.expired_certificates|length }} Certificat{{ alerts.expired_certificates|length > 1 ? 'i' : 'o' }} medic{{ alerts.expired_certificates|length > 1 ? 'i' : 'o' }} scadut{{ alerts.expired_certificates|length > 1 ? 'i' : 'o' }}</h3>
                <p class="text-red-700 text-sm mt-1">Utenti non possono accedere alla palestra</p>
                <a href="{{ path('admin_certificates') }}" class="text-red-800 text-sm font-medium underline mt-2 inline-block">Gestisci →</a>
            </div>
        </div>
    </div>
    {% endif %}

    {# Certificati in scadenza - WARNING #}
    {% if alerts.expiring_certificates|length > 0 %}
    <div class="bg-orange-50 border-l-4 border-orange-500 p-4 rounded-lg">
        <div class="flex items-start">
            <svg class="w-6 h-6 text-orange-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="flex-1">
                <h3 class="text-orange-800 font-semibold">{{ alerts.expiring_certificates|length }} Certificat{{ alerts.expiring_certificates|length > 1 ? 'i' : 'o' }} in scadenza (30 giorni)</h3>
                <p class="text-orange-700 text-sm mt-1">Avvisa gli utenti di rinnovare</p>
                <a href="{{ path('admin_certificates') }}" class="text-orange-800 text-sm font-medium underline mt-2 inline-block">Vedi lista →</a>
            </div>
        </div>
    </div>
    {% endif %}

    {# Abbonamenti in scadenza - WARNING #}
    {% if alerts.expiring_memberships|length > 0 %}
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-lg">
        <div class="flex items-start">
            <svg class="w-6 h-6 text-yellow-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="flex-1">
                <h3 class="text-yellow-800 font-semibold">{{ alerts.expiring_memberships|length }} Abbonament{{ alerts.expiring_memberships|length > 1 ? 'i' : 'o' }} in scadenza (30 giorni)</h3>
                <p class="text-yellow-700 text-sm mt-1">Pianifica rinnovi</p>
                <a href="{{ path('admin_memberships_expiring') }}" class="text-yellow-800 text-sm font-medium underline mt-2 inline-block">Vedi lista →</a>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {# Richieste iscrizione pendenti #}
        {% if alerts.pending_requests|length > 0 %}
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <div class="flex-1">
                    <h3 class="text-blue-800 font-semibold">{{ alerts.pending_requests|length }} Richiest{{ alerts.pending_requests|length > 1 ? 'e' : 'a' }} di iscrizione</h3>
                    <p class="text-blue-700 text-sm mt-1">Da approvare o rifiutare</p>
                    <a href="{{ path('admin_membership_requests') }}" class="text-blue-800 text-sm font-medium underline mt-2 inline-block">Gestisci →</a>
                </div>
            </div>
        </div>
        {% endif %}

        {# Inviti PT pendenti #}
        {% if alerts.pending_invitations|length > 0 %}
        <div class="bg-purple-50 border-l-4 border-purple-500 p-4 rounded-lg">
            <div class="flex items-start">
                <svg class="w-6 h-6 text-purple-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div class="flex-1">
                    <h3 class="text-purple-800 font-semibold">{{ alerts.pending_invitations|length }} Invit{{ alerts.pending_invitations|length > 1 ? 'i' : 'o' }} PT in attesa</h3>
                    <p class="text-purple-700 text-sm mt-1">In attesa di risposta</p>
                    <a href="{{ path('admin_invitations') }}" class="text-purple-800 text-sm font-medium underline mt-2 inline-block">Vedi →</a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}

{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Iscritti Attivi</p>
                <p class="text-3xl font-bold text-green-600 mt-2">{{ stats.active_memberships }}</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Utenti Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.total_users }}</p>
            </div>
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Corsi Attivi</p>
                <p class="text-3xl font-bold text-purple-600 mt-2">{{ stats.active_courses }}</p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Personal Trainer</p>
                <p class="text-3xl font-bold text-blue-600 mt-2">{{ stats.total_trainers }}</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Check-in Oggi</p>
                <p class="text-3xl font-bold text-primary-600 mt-2">{{ today_check_ins }}</p>
            </div>
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Main Content Grid #}
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    {# Corsi Oggi #}
    <div class="bg-white rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200 flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Corsi di Oggi</h3>
            <a href="{{ path('admin_courses_calendar') }}" class="text-sm text-primary-600 hover:text-primary-700 font-medium">Calendario →</a>
        </div>
        <div class="p-6">
            {% if today_schedules|length > 0 %}
                <div class="space-y-3">
                    {% for schedule in today_schedules %}
                        <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="flex items-center flex-1">
                                <div class="w-12 h-12 rounded-lg flex items-center justify-center text-white font-bold" style="background-color: {{ schedule.course.category ? schedule.course.category.color : '#3B82F6' }}">
                                    {{ schedule.startTime|date('H:i') }}
                                </div>
                                <div class="ml-3 flex-1">
                                    <p class="text-sm font-semibold text-gray-900">{{ schedule.course.name }}</p>
                                    <p class="text-xs text-gray-500">{{ schedule.startTime|date('H:i') }} - {{ schedule.endTime|date('H:i') }}</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-medium text-gray-700">{{ schedule.activeEnrollmentsCount }}/{{ schedule.course.maxParticipants }}</p>
                                <p class="text-xs text-gray-500">iscritti</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8 text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <p class="text-sm">Nessun corso programmato per oggi</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Liste d'Attesa Attive #}
    <div class="bg-white rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Liste d'Attesa Attive</h3>
        </div>
        <div class="p-6">
            {% if active_waiting_lists|length > 0 %}
                <div class="space-y-3">
                    {% for item in active_waiting_lists %}
                        <div class="flex items-center justify-between p-3 bg-orange-50 border border-orange-200 rounded-lg">
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-900">{{ item.schedule.course.name }}</p>
                                <p class="text-xs text-gray-600">{{ item.schedule.dayOfWeek|capitalize }} {{ item.schedule.startTime|date('H:i') }}</p>
                            </div>
                            <div class="flex items-center">
                                <span class="px-3 py-1 bg-orange-600 text-white text-sm font-bold rounded-full">
                                    {{ item.count }} in attesa
                                </span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8 text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <p class="text-sm">Nessuna lista d'attesa attiva</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{# Iscrizioni Recenti #}
<div class="bg-white rounded-lg shadow-md mb-8">
    <div class="p-6 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Iscrizioni Recenti</h3>
        <a href="{{ path('admin_memberships') }}" class="text-sm text-primary-600 hover:text-primary-700 font-medium">Vedi tutte →</a>
    </div>
    <div class="p-6">
        {% if recent_memberships|length > 0 %}
            <div class="space-y-4">
                {% for membership in recent_memberships %}
                    <div class="flex items-center justify-between pb-4 border-b border-gray-100 last:border-0 last:pb-0">
                        <div class="flex items-center">
                            <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                                <span class="text-primary-600 font-bold text-sm">
                                    {{ membership.user.firstName|slice(0, 1) ~ membership.user.lastName|slice(0, 1) }}
                                </span>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">
                                    {{ membership.user.firstName }} {{ membership.user.lastName }}
                                </p>
                                <p class="text-xs text-gray-500">
                                    {{ membership.createdAt|date('d/m/Y H:i') }}
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="px-2 py-1 text-xs font-medium rounded-full
                                {% if membership.status == 'active' %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ membership.status|capitalize }}
                            </span>
                            <a href="{{ path('admin_membership_show', {'id': membership.id}) }}" class="text-primary-600 hover:text-primary-700">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500 text-center py-8">Nessuna iscrizione recente</p>
        {% endif %}
    </div>
</div>

{# Quick Actions #}
<div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-lg shadow-lg p-8 text-white">
    <h3 class="text-2xl font-bold mb-4">Azioni Rapide</h3>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <a href="{{ path('admin_invitations') }}" class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg p-6 transition-colors">
            <svg class="w-8 h-8 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h4 class="font-semibold mb-1">Invita Personal Trainer</h4>
            <p class="text-sm text-white/80">Espandi il team</p>
        </a>

        <a href="{{ path('admin_courses') }}" class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg p-6 transition-colors">
            <svg class="w-8 h-8 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <h4 class="font-semibold mb-1">Gestisci Corsi</h4>
            <p class="text-sm text-white/80">Crea e modifica corsi</p>
        </a>

        <a href="{{ path('admin_check_in') }}" class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg p-6 transition-colors">
            <svg class="w-8 h-8 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
            <h4 class="font-semibold mb-1">Check-in Tornello</h4>
            <p class="text-sm text-white/80">Gestisci ingressi</p>
        </a>

        <a href="{{ path('admin_settings') }}" class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg p-6 transition-colors">
            <svg class="w-8 h-8 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <h4 class="font-semibold mb-1">Impostazioni</h4>
            <p class="text-sm text-white/80">Configura la palestra</p>
        </a>
    </div>
</div>

{% endblock %}
