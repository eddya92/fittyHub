{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestione Pagamenti{% endblock %}
{% block page_subtitle %}Registro completo di tutti i pagamenti ricevuti{% endblock %}

{% block content %}
{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Pagamenti Totali</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{{ stats.total_payments }}</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Importo Totale</p>
                <p class="text-3xl font-bold text-green-600 mt-2">€ {{ stats.total_amount|number_format(2, ',', '.') }}</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Actions #}
<div class="mb-6 flex justify-between items-center">
    <div>
        <a href="{{ path('admin_payment_new') }}" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors shadow-md">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Registra Pagamento
        </a>
    </div>
    <div>
        <a href="{{ path('admin_payment_reports') }}" class="inline-flex items-center px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors shadow-md">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Report Finanziari
        </a>
    </div>
</div>

{# Filters #}
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <form method="get" action="{{ path('admin_payments') }}" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <label for="payment_type" class="block text-sm font-medium text-gray-700 mb-2">Tipo Pagamento</label>
            <select id="payment_type" name="payment_type" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <option value="">Tutti</option>
                <option value="membership" {% if current_payment_type == 'membership' %}selected{% endif %}>Abbonamento</option>
                <option value="course_enrollment" {% if current_payment_type == 'course_enrollment' %}selected{% endif %}>Iscrizione Corso</option>
                <option value="pt_session" {% if current_payment_type == 'pt_session' %}selected{% endif %}>Sessione PT</option>
                <option value="other" {% if current_payment_type == 'other' %}selected{% endif %}>Altro</option>
            </select>
        </div>

        <div>
            <label for="payment_method" class="block text-sm font-medium text-gray-700 mb-2">Metodo Pagamento</label>
            <select id="payment_method" name="payment_method" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <option value="">Tutti</option>
                <option value="cash" {% if current_payment_method == 'cash' %}selected{% endif %}>Contanti</option>
                <option value="card" {% if current_payment_method == 'card' %}selected{% endif %}>Carta</option>
                <option value="bank_transfer" {% if current_payment_method == 'bank_transfer' %}selected{% endif %}>Bonifico</option>
                <option value="other" {% if current_payment_method == 'other' %}selected{% endif %}>Altro</option>
            </select>
        </div>

        <div>
            <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">Da Data</label>
            <input type="date" id="start_date" name="start_date" value="{{ current_start_date }}" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
        </div>

        <div>
            <label for="end_date" class="block text-sm font-medium text-gray-700 mb-2">A Data</label>
            <input type="date" id="end_date" name="end_date" value="{{ current_end_date }}" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
        </div>

        <div class="flex items-end md:col-span-2">
            <button type="submit" class="w-full px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium">
                Filtra
            </button>
        </div>
    </form>
</div>

{# Payments Table #}
<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utente</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrizione</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metodo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Importo</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for payment in payments %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ payment.paymentDate|date('d/m/Y') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{{ payment.user.firstName }} {{ payment.user.lastName }}</div>
                        <div class="text-sm text-gray-500">{{ payment.user.email }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ payment.description }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                            {% if payment.paymentMethod == 'cash' %}bg-green-100 text-green-800
                            {% elseif payment.paymentMethod == 'card' %}bg-blue-100 text-blue-800
                            {% elseif payment.paymentMethod == 'bank_transfer' %}bg-purple-100 text-purple-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ payment.paymentMethodLabel }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                        € {{ payment.amount|number_format(2, ',', '.') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('admin_payment_show', {id: payment.id}) }}" class="text-primary-600 hover:text-primary-900 mr-3">Dettagli</a>
                        <form method="post" action="{{ path('admin_payment_delete', {id: payment.id}) }}" class="inline" onsubmit="return confirm('Sei sicuro di voler eliminare questo pagamento?');">
                            <button type="submit" class="text-red-600 hover:text-red-900">Elimina</button>
                        </form>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        Nessun pagamento trovato.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
