{% extends 'admin/base.html.twig' %}

{% block page_title %}Dettagli Pagamento{% endblock %}
{% block page_subtitle %}Informazioni complete sul pagamento{% endblock %}

{% block content %}
<div class="max-w-5xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('admin_payments') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Torna alla lista
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Main Payment Info #}
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gradient-to-r from-primary-600 to-primary-700 px-6 py-4">
                    <h3 class="text-xl font-bold text-white">Informazioni Pagamento</h3>
                </div>
                <div class="p-6">
                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">ID Pagamento</dt>
                            <dd class="mt-1 text-sm text-gray-900">#{{ payment.id }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Data Pagamento</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.paymentDate|date('d/m/Y H:i') }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Importo</dt>
                            <dd class="mt-1 text-2xl font-bold text-green-600">€ {{ payment.amount|number_format(2, ',', '.') }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Metodo Pagamento</dt>
                            <dd class="mt-1">
                                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full
                                    {% if payment.paymentMethod == 'cash' %}bg-green-100 text-green-800
                                    {% elseif payment.paymentMethod == 'card' %}bg-blue-100 text-blue-800
                                    {% elseif payment.paymentMethod == 'bank_transfer' %}bg-purple-100 text-purple-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ payment.paymentMethodLabel }}
                                </span>
                            </dd>
                        </div>
                        <div class="md:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Descrizione</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.description }}</dd>
                        </div>
                        {% if payment.transactionReference %}
                        <div class="md:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Riferimento Transazione</dt>
                            <dd class="mt-1 text-sm text-gray-900 font-mono">{{ payment.transactionReference }}</dd>
                        </div>
                        {% endif %}
                        {% if payment.notes %}
                        <div class="md:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Note</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.notes }}</dd>
                        </div>
                        {% endif %}
                        <div class="md:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Registrato da</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                {% if payment.createdBy %}
                                    {{ payment.createdBy.firstName }} {{ payment.createdBy.lastName }}
                                {% else %}
                                    Sistema
                                {% endif %}
                                il {{ payment.createdAt|date('d/m/Y H:i') }}
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>

            {# Related Entity Details #}
            {% if payment.membership %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden mt-6">
                <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
                    <h3 class="text-xl font-bold text-white">Abbonamento Collegato</h3>
                </div>
                <div class="p-6">
                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Piano</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.membership.subscriptionPlan.name }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Stato</dt>
                            <dd class="mt-1">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                    {% if payment.membership.status == 'active' %}bg-green-100 text-green-800
                                    {% elseif payment.membership.status == 'expired' %}bg-orange-100 text-orange-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ payment.membership.status|upper }}
                                </span>
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Data Inizio</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.membership.startDate|date('d/m/Y') }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Data Fine</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.membership.endDate|date('d/m/Y') }}</dd>
                        </div>
                        <div class="md:col-span-2">
                            <a href="{{ path('admin_membership_show', {id: payment.membership.id}) }}" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                                Vedi dettagli abbonamento →
                            </a>
                        </div>
                    </dl>
                </div>
            </div>
            {% endif %}

            {% if payment.courseEnrollment %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden mt-6">
                <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
                    <h3 class="text-xl font-bold text-white">Iscrizione Corso Collegata</h3>
                </div>
                <div class="p-6">
                    <dl class="grid grid-cols-1 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Corso</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.courseEnrollment.courseSession.schedule.course.name }}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Data Sessione</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.courseEnrollment.courseSession.sessionDate|date('d/m/Y H:i') }}</dd>
                        </div>
                    </dl>
                </div>
            </div>
            {% endif %}
        </div>

        {# User Info Sidebar #}
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="bg-gradient-to-r from-gray-700 to-gray-800 px-6 py-4">
                    <h3 class="text-xl font-bold text-white">Informazioni Utente</h3>
                </div>
                <div class="p-6">
                    <div class="text-center mb-4">
                        <div class="inline-flex items-center justify-center w-20 h-20 bg-primary-100 rounded-full mb-3">
                            <span class="text-2xl font-bold text-primary-600">
                                {{ payment.user.firstName|slice(0, 1) }}{{ payment.user.lastName|slice(0, 1) }}
                            </span>
                        </div>
                        <h4 class="text-lg font-bold text-gray-900">{{ payment.user.firstName }} {{ payment.user.lastName }}</h4>
                        <p class="text-sm text-gray-500">{{ payment.user.email }}</p>
                    </div>
                    <dl class="space-y-3">
                        {% if payment.user.phone %}
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Telefono</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.user.phone }}</dd>
                        </div>
                        {% endif %}
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Palestra</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ payment.gym.name }}</dd>
                        </div>
                    </dl>
                    <div class="mt-6">
                        <a href="{{ path('admin_membership_show', {id: payment.user.id}) }}" class="w-full inline-flex justify-center items-center px-4 py-2 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 transition-colors text-sm font-medium">
                            Vedi profilo utente
                        </a>
                    </div>
                </div>
            </div>

            {# Actions #}
            <div class="bg-white rounded-lg shadow-md overflow-hidden mt-6 p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-4">Azioni</h3>
                <form method="post" action="{{ path('admin_payment_delete', {id: payment.id}) }}" onsubmit="return confirm('Sei sicuro di voler eliminare questo pagamento? Questa azione non può essere annullata.');">
                    <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm font-medium">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Elimina Pagamento
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
