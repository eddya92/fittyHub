{% extends 'admin/base.html.twig' %}

{% block page_title %}Categorie Corsi{% endblock %}
{% block page_subtitle %}Gestisci le categorie personalizzate dei corsi{% endblock %}

{% block content %}
<div class="mb-6">
    <a
        href="{{ path('admin_course_category_create') }}"
        class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium shadow-lg"
    >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Crea Nuova Categoria
    </a>
</div>

{% if categories|length > 0 %}
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Nome
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Colore
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Anteprima
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Data Creazione
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Azioni
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for category in categories %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <p class="text-sm font-medium text-gray-900">{{ category.name }}</p>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <code class="text-xs bg-gray-100 px-2 py-1 rounded">{{ category.color }}</code>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded" style="background-color: {{ category.color }}"></div>
                                <div class="px-3 py-1 rounded-lg text-white text-sm font-medium" style="background-color: {{ category.color }}">
                                    {{ category.name }}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ category.createdAt|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm space-x-3">
                            <a href="{{ path('admin_course_category_edit', {'id': category.id}) }}" class="text-primary-600 hover:text-primary-900 font-medium">
                                Modifica
                            </a>
                            <form method="post" action="{{ path('admin_course_category_delete', {'id': category.id}) }}" class="inline" onsubmit="return confirm('Eliminare questa categoria? I corsi associati non verranno eliminati ma dovranno essere riassegnati.')">
                                <button type="submit" class="text-red-600 hover:text-red-900 font-medium">
                                    Elimina
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <p class="text-lg font-medium text-gray-500">Nessuna categoria creata</p>
        <p class="text-sm text-gray-400 mt-1">Crea la tua prima categoria personalizzata!</p>
        <a
            href="{{ path('admin_course_category_create') }}"
            class="inline-block mt-4 px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
        >
            Crea Categoria
        </a>
    </div>
{% endif %}
{% endblock %}
