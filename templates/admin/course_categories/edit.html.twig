{% extends 'admin/base.html.twig' %}

{% block page_title %}Modifica Categoria{% endblock %}
{% block page_subtitle %}Aggiorna la categoria corso{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_course_categories') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna alle categorie
    </a>
</div>

<form method="post" class="space-y-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Informazioni Categoria</h3>

        <div class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nome Categoria *</label>
                <input
                    type="text"
                    id="name"
                    name="name"
                    value="{{ category.name }}"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                >
            </div>

            <div>
                <label for="color" class="block text-sm font-medium text-gray-700 mb-2">Colore *</label>
                <div class="flex gap-4 items-center">
                    <input
                        type="color"
                        id="color"
                        name="color"
                        required
                        value="{{ category.color }}"
                        class="h-12 w-24 rounded border border-gray-300 cursor-pointer"
                    >
                    <input
                        type="text"
                        id="color_hex"
                        readonly
                        value="{{ category.color }}"
                        class="px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 font-mono text-sm"
                    >
                </div>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <p class="text-sm font-medium text-gray-700 mb-3">Anteprima</p>
                <div id="preview" class="inline-block px-4 py-2 rounded-lg text-white font-medium" style="background-color: {{ category.color }}">
                    {{ category.name }}
                </div>
            </div>
        </div>
    </div>

    <div class="flex gap-4">
        <button
            type="submit"
            class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
        >
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Salva Modifiche
        </button>

        <a
            href="{{ path('admin_course_categories') }}"
            class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium"
        >
            Annulla
        </a>
    </div>
</form>

<script>
    const colorPicker = document.getElementById('color');
    const colorHex = document.getElementById('color_hex');
    const preview = document.getElementById('preview');
    const nameInput = document.getElementById('name');

    colorPicker.addEventListener('input', (e) => {
        const color = e.target.value;
        colorHex.value = color;
        preview.style.backgroundColor = color;
    });

    nameInput.addEventListener('input', (e) => {
        preview.textContent = e.target.value || 'Categoria di Esempio';
    });
</script>
{% endblock %}
