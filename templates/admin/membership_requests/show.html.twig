{% extends 'admin/base.html.twig' %}

{% block page_title %}Richiesta Iscrizione #{{ request.id }}{% endblock %}
{% block page_subtitle %}Gestisci la richiesta di iscrizione{% endblock %}

{% block content %}

<div class="mb-6">
    <a href="{{ path('admin_membership_requests') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Torna alle richieste
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Dati Utente #}
    <div class="lg:col-span-2 space-y-6">
        {# Info Utente #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Dati Utente
            </h3>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Nome</label>
                    <p class="mt-1 text-gray-900">{{ request.user.firstName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Cognome</label>
                    <p class="mt-1 text-gray-900">{{ request.user.lastName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Email</label>
                    <p class="mt-1 text-gray-900">{{ request.user.email }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Telefono</label>
                    <p class="mt-1 text-gray-900">{{ request.user.phoneNumber ?? 'Non specificato' }}</p>
                </div>
                {% if request.user.dateOfBirth %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Data di Nascita</label>
                    <p class="mt-1 text-gray-900">{{ request.user.dateOfBirth|date('d/m/Y') }}</p>
                </div>
                {% endif %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">Genere</label>
                    <p class="mt-1 text-gray-900">{{ request.user.gender ?? 'Non specificato' }}</p>
                </div>
            </div>
        </div>

        {# Messaggio Utente #}
        {% if request.message %}
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
            <div class="flex">
                <svg class="w-5 h-5 text-blue-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <div>
                    <p class="text-sm font-medium text-blue-900">Messaggio dell'utente:</p>
                    <p class="mt-2 text-sm text-blue-800">{{ request.message }}</p>
                </div>
            </div>
        </div>
        {% endif %}

        {# Form Approvazione #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Approva Iscrizione</h3>

            <form method="post" action="{{ path('admin_membership_request_approve', {id: request.id}) }}">
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label for="start_date" class="block text-sm font-medium text-gray-700 mb-2">Data Inizio Abbonamento *</label>
                        <input type="date" id="start_date" name="start_date"
                               value="{{ 'now'|date('Y-m-d') }}"
                               required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    </div>
                    <div>
                        <label for="end_date" class="block text-sm font-medium text-gray-700 mb-2">Data Fine Abbonamento *</label>
                        <input type="date" id="end_date" name="end_date"
                               value="{{ '+1 year'|date('Y-m-d') }}"
                               required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    </div>
                </div>

                <div class="mb-4">
                    <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">Note (opzionale)</label>
                    <textarea id="notes" name="notes" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                              placeholder="Note aggiuntive sull'abbonamento..."></textarea>
                </div>

                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
                    <div class="flex">
                        <svg class="w-5 h-5 text-yellow-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-medium text-yellow-800">Attenzione</p>
                            <p class="text-sm text-yellow-700 mt-1">
                                L'utente deve avere un certificato medico valido per essere approvato.
                                Assicurati che l'utente abbia caricato il certificato prima di approvare.
                            </p>
                        </div>
                    </div>
                </div>

                <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Approva e Crea Abbonamento
                </button>
            </form>
        </div>

        {# Form Rifiuto #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4 text-red-600">Rifiuta Richiesta</h3>

            <form method="post" action="{{ path('admin_membership_request_reject', {id: request.id}) }}"
                  onsubmit="return confirm('Sei sicuro di voler rifiutare questa richiesta?');">
                <div class="mb-4">
                    <label for="reason" class="block text-sm font-medium text-gray-700 mb-2">Motivazione (opzionale)</label>
                    <textarea id="reason" name="reason" rows="3"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
                              placeholder="Spiega perchÃ© la richiesta viene rifiutata..."></textarea>
                </div>

                <button type="submit"
                        class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
                    <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Rifiuta Richiesta
                </button>
            </form>
        </div>
    </div>

    {# Sidebar Info #}
    <div class="space-y-6">
        {# Stato Richiesta #}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Stato Richiesta</h3>
            <div class="space-y-3">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Status</label>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 mt-1">
                        In Attesa
                    </span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Data Richiesta</label>
                    <p class="mt-1 text-gray-900">{{ request.requestedAt|date('d/m/Y H:i') }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Palestra</label>
                    <p class="mt-1 text-gray-900">{{ request.gym.name }}</p>
                </div>
            </div>
        </div>

        {# Quick Actions #}
        <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Azioni Rapide</h3>
            <div class="space-y-2">
                <a href="mailto:{{ request.user.email }}"
                   class="block text-sm text-primary-600 hover:text-primary-700">
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    Invia Email
                </a>
                {% if request.user.phoneNumber %}
                <a href="tel:{{ request.user.phoneNumber }}"
                   class="block text-sm text-primary-600 hover:text-primary-700">
                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    Chiama
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
