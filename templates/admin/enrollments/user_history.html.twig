{% extends 'admin/base.html.twig' %}

{% block page_title %}Storico Quote Iscrizione - {{ user.firstName }} {{ user.lastName }}{% endblock %}
{% block page_subtitle %}Tutte le quote iscrizione pagate dal cliente{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_enrollments') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna alle quote
    </a>
</div>

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex items-center">
        <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center">
            <span class="text-primary-600 font-bold text-2xl">
                {{ user.firstName|slice(0, 1) ~ user.lastName|slice(0, 1) }}
            </span>
        </div>
        <div class="ml-4">
            <h3 class="text-xl font-bold text-gray-900">{{ user.firstName }} {{ user.lastName }}</h3>
            <p class="text-sm text-gray-600">{{ user.email }}</p>
        </div>
    </div>
</div>

{% if enrollments|length > 0 %}
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Storico Completo Quote Iscrizione</h3>
        <div class="space-y-4">
            {% for enrollment in enrollments %}
                <div class="border {% if enrollment.status == 'active' and not enrollment.isExpired %}border-blue-500 border-2 bg-blue-50{% else %}border-gray-200{% endif %} rounded-lg p-4">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <div class="flex items-center gap-2 mb-2">
                                {% if enrollment.status == 'active' and not enrollment.isExpired %}
                                    <span class="px-3 py-1 text-xs font-bold bg-blue-600 text-white rounded-full">
                                        ★ ATTIVA
                                    </span>
                                {% else %}
                                    <span class="px-3 py-1 text-xs font-bold bg-gray-400 text-white rounded-full">
                                        SCADUTA
                                    </span>
                                {% endif %}
                                <span class="text-sm font-medium text-gray-700">{{ enrollment.gym.name }}</span>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-2xl font-bold text-green-600">€{{ enrollment.amount }}</p>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <p class="text-xs text-gray-600">Data Pagamento</p>
                            <p class="font-medium text-gray-900">{{ enrollment.paymentDate|date('d/m/Y') }}</p>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Data Scadenza</p>
                            {% if enrollment.expiryDate %}
                                <p class="font-medium text-gray-900">{{ enrollment.expiryDate|date('d/m/Y') }}</p>
                                {% if enrollment.isExpired %}
                                    <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded">SCADUTA</span>
                                {% endif %}
                            {% else %}
                                <p class="font-medium text-gray-500">Illimitata</p>
                            {% endif %}
                        </div>
                    </div>

                    {% if enrollment.notes %}
                        <div class="mt-3 pt-3 border-t border-gray-200">
                            <p class="text-xs text-gray-600">Note</p>
                            <p class="text-sm text-gray-900">{{ enrollment.notes }}</p>
                        </div>
                    {% endif %}

                    <div class="mt-3 pt-3 border-t border-gray-200 text-xs text-gray-500">
                        <p>Registrata il {{ enrollment.createdAt|date('d/m/Y H:i') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-600">Totale quote pagate</p>
                    <p class="text-2xl font-bold text-gray-900">{{ enrollments|length }}</p>
                </div>
                <a href="{{ path('admin_enrollment_create', {'user_id': user.id}) }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Nuova Quota
                </a>
            </div>
        </div>
    </div>
{% else %}
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-lg font-medium text-gray-900 mb-2">Nessuna quota iscrizione</p>
        <p class="text-sm text-gray-600 mb-6">Questo cliente non ha ancora pagato quote iscrizione</p>
        <a href="{{ path('admin_enrollment_create', {'user_id': user.id}) }}" class="inline-flex items-center px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Crea Prima Quota
        </a>
    </div>
{% endif %}
{% endblock %}