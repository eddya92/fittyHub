{% extends 'admin/base.html.twig' %}

{% block page_title %}Nuova Quota Iscrizione{% endblock %}
{% block page_subtitle %}Registra una nuova quota di iscrizione/affiliazione{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('admin_enrollments') }}" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Torna alle quote
    </a>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
    <form method="post" action="{{ path('admin_enrollment_create') }}">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# User Selection #}
            <div class="col-span-2">
                <label for="user_id" class="block text-sm font-medium text-gray-700 mb-2">Cliente *</label>
                <select id="user_id" name="user_id" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Seleziona un cliente...</option>
                    {% for u in users %}
                        <option value="{{ u.id }}" {% if user and user.id == u.id %}selected{% endif %}>
                            {{ u.firstName }} {{ u.lastName }} ({{ u.email }})
                        </option>
                    {% endfor %}
                </select>
                <p class="mt-1 text-sm text-gray-500">Seleziona il cliente che paga la quota</p>
            </div>

            {# Gym Selection #}
            <div class="col-span-2">
                <label for="gym_id" class="block text-sm font-medium text-gray-700 mb-2">Palestra *</label>
                <select id="gym_id" name="gym_id" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Seleziona una palestra...</option>
                    {% for gym in gyms %}
                        <option value="{{ gym.id }}" data-fee="{{ gym.enrollmentFeeAmount }}">{{ gym.name }}</option>
                    {% endfor %}
                </select>
                <p class="mt-1 text-sm text-gray-500">La palestra a cui è associata la quota</p>
            </div>

            {# Amount #}
            <div>
                <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">Importo (€) *</label>
                <input type="number" id="amount" name="amount" step="0.01" min="0" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <p class="mt-1 text-sm text-gray-500">Importo della quota iscrizione</p>
            </div>

            {# Payment Date #}
            <div>
                <label for="payment_date" class="block text-sm font-medium text-gray-700 mb-2">Data Pagamento *</label>
                <input type="date" id="payment_date" name="payment_date" value="{{ 'now'|date('Y-m-d') }}" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <p class="mt-1 text-sm text-gray-500">Quando è stata pagata la quota</p>
            </div>

            {# Expiry Date #}
            <div class="col-span-2">
                <label for="expiry_date" class="block text-sm font-medium text-gray-700 mb-2">Data Scadenza (opzionale)</label>
                <input type="date" id="expiry_date" name="expiry_date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <p class="mt-1 text-sm text-gray-500">Lascia vuoto se la quota non ha scadenza (valida per sempre)</p>
            </div>

            {# Notes #}
            <div class="col-span-2">
                <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">Note</label>
                <textarea id="notes" name="notes" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Note aggiuntive sulla quota..."></textarea>
                <p class="mt-1 text-sm text-gray-500">Eventuali informazioni aggiuntive</p>
            </div>
        </div>

        <div class="mt-8 flex justify-between">
            <a href="{{ path('admin_enrollments') }}" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium">
                Annulla
            </a>
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Crea Quota
            </button>
        </div>
    </form>
</div>

<script>
// Auto-compila l'importo quando si seleziona una palestra
document.getElementById('gym_id').addEventListener('change', function() {
    const selectedOption = this.options[this.selectedIndex];
    const feeAmount = selectedOption.dataset.fee;
    if (feeAmount) {
        document.getElementById('amount').value = feeAmount;
    }
});

// Auto-calcola data scadenza (12 mesi dalla data pagamento)
document.getElementById('payment_date').addEventListener('change', function() {
    const paymentDate = new Date(this.value);
    if (paymentDate) {
        const expiryDate = new Date(paymentDate);
        expiryDate.setFullYear(expiryDate.getFullYear() + 1);
        document.getElementById('expiry_date').value = expiryDate.toISOString().split('T')[0];
    }
});
</script>
{% endblock %}