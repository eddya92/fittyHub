{% extends 'pt/base.html.twig' %}

{% block page_title %}Interviste Clienti{% endblock %}
{% block page_subtitle %}Gestisci le valutazioni iniziali dei tuoi clienti{% endblock %}

{% block content %}
<div class="mb-6">
    <a href="{{ path('pt_clients') }}" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors inline-block">
        + Nuova Intervista
    </a>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Obiettivo</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stato</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Data</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Azioni</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for assessment in assessments %}
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                    <div class="font-medium text-gray-900">{{ assessment.client.firstName }} {{ assessment.client.lastName }}</div>
                    <div class="text-sm text-gray-500">{{ assessment.client.email }}</div>
                </td>
                <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">{{ assessment.primaryGoal|slice(0, 50) }}{{ assessment.primaryGoal|length > 50 ? '...' : '' }}</div>
                </td>
                <td class="px-6 py-4">
                    {% if assessment.status == 'completed' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Completata</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Bozza</span>
                    {% endif %}
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                    {{ assessment.createdAt|date('d/m/Y') }}
                </td>
                <td class="px-6 py-4 text-right text-sm">
                    <a href="{{ path('pt_assessment_view', {id: assessment.id}) }}" class="text-blue-600 hover:underline">Visualizza</a>
                    {% if assessment.status == 'completed' %}
                        <span class="mx-2">|</span>
                        <a href="{{ path('pt_workout_plan_create_from_assessment', {assessmentId: assessment.id}) }}" class="text-green-600 hover:underline">Crea Piano</a>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                    Nessuna intervista trovata. Seleziona un cliente e inizia una nuova valutazione.
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}