{% extends 'pt/base.html.twig' %}

{% block page_title %}Crea Piano di Allenamento{% endblock %}
{% block page_subtitle %}Basato sull'intervista di {{ assessment.client.firstName }} {{ assessment.client.lastName }}{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow-md p-6">
    <form method="post">
        <div class="mb-8">
            <h3 class="text-lg font-semibold mb-4">ðŸ“‹ Riepilogo Intervista</h3>
            <div class="bg-blue-50 p-4 rounded-lg">
                <p><strong>Obiettivo:</strong> {{ assessment.primaryGoal }}</p>
                <p><strong>Livello:</strong> {{ assessment.fitnessLevel|upper }}</p>
                <p><strong>DisponibilitÃ :</strong> {{ assessment.weeklyAvailability }} giorni/settimana, {{ assessment.sessionDuration }} min/sessione</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-sm font-medium mb-2">Nome Piano *</label>
                <input type="text" name="name" required class="w-full px-4 py-2 border rounded-lg" placeholder="Es: Piano Massa Muscolare - Fase 1">
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Tipo Piano *</label>
                <select name="planType" required class="w-full px-4 py-2 border rounded-lg">
                    <option value="">Seleziona...</option>
                    <option value="strength">Forza</option>
                    <option value="hypertrophy">Ipertrofia</option>
                    <option value="endurance">Resistenza</option>
                    <option value="weight_loss">Perdita Peso</option>
                    <option value="general_fitness">Fitness Generale</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Data Inizio *</label>
                <input type="date" name="startDate" required class="w-full px-4 py-2 border rounded-lg" value="{{ 'now'|date('Y-m-d') }}">
            </div>
            <div>
                <label class="block text-sm font-medium mb-2">Durata (Settimane) *</label>
                <input type="number" name="weeksCount" required min="1" class="w-full px-4 py-2 border rounded-lg" value="8">
            </div>
            <div class="col-span-2">
                <label class="block text-sm font-medium mb-2">Descrizione</label>
                <textarea name="description" rows="3" class="w-full px-4 py-2 border rounded-lg"></textarea>
            </div>
            <div class="col-span-2">
                <label class="block text-sm font-medium mb-2">Note</label>
                <textarea name="notes" rows="2" class="w-full px-4 py-2 border rounded-lg"></textarea>
            </div>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
                Crea Piano â†’
            </button>
            <a href="{{ path('pt_assessments') }}" class="px-6 py-3 bg-white border text-gray-700 hover:bg-gray-50 rounded-lg">
                Annulla
            </a>
        </div>
    </form>
</div>
{% endblock %}