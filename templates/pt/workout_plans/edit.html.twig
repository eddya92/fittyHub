{% extends 'pt/base.html.twig' %}

{% block page_title %}Modifica Piano: {{ plan.name }}{% endblock %}
{% block page_subtitle %}Aggiungi e modifica esercizi{% endblock %}

{% block content %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main content - Plan exercises #}
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-2">{{ plan.name }}</h3>
                <div class="grid grid-cols-2 gap-4 text-sm text-gray-600">
                    <div><strong>Cliente:</strong> {{ plan.client.firstName }} {{ plan.client.lastName }}</div>
                    <div><strong>Obiettivo:</strong> {{ plan.goal }}</div>
                    <div><strong>Tipo:</strong> {{ plan.planType }}</div>
                    <div><strong>Settimane:</strong> {{ plan.weeksCount }}</div>
                </div>
            </div>

            <div class="border-t pt-6">
                <h4 class="text-md font-semibold mb-4">Esercizi del Piano</h4>

                {% set planExercises = plan.workoutExercises|filter(e => e.exercise is not null) %}

                {% if planExercises is empty %}
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
                        <svg class="w-12 h-12 mx-auto text-blue-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        <p class="text-blue-800 font-medium">Nessun esercizio aggiunto</p>
                        <p class="text-blue-600 text-sm mt-1">Usa il pannello a destra per aggiungere esercizi al piano</p>
                    </div>
                {% else %}
                    {% for week in 1..plan.weeksCount %}
                        <div class="mb-6">
                            <h5 class="font-medium text-gray-900 mb-3 flex items-center">
                                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Settimana {{ week }}</span>
                            </h5>

                            {% set weekExercises = planExercises|filter(e => e.week == week) %}
                            {% if weekExercises is not empty %}
                                {% for day in 1..7 %}
                                    {% set dayExercises = weekExercises|filter(e => e.dayOfWeek == day) %}
                                    {% if dayExercises is not empty %}
                                        <div class="mb-4 bg-gray-50 rounded-lg p-4">
                                            <h6 class="font-medium text-sm text-gray-700 mb-3">
                                                {% set dayNames = ['Lunedì', 'Martedì', 'Mercoledì', 'Giovedì', 'Venerdì', 'Sabato', 'Domenica'] %}
                                                {{ dayNames[day - 1] }}
                                            </h6>

                                            <div class="space-y-2">
                                                {% for workoutExercise in dayExercises|sort((a, b) => a.orderIndex <=> b.orderIndex) %}
                                                    <div class="bg-white rounded-lg p-4 border border-gray-200 hover:border-blue-300 transition-colors">
                                                        <div class="flex justify-between items-start">
                                                            <div class="flex-1">
                                                                <h6 class="font-medium text-gray-900">{{ workoutExercise.exercise.name }}</h6>
                                                                <div class="mt-2 flex flex-wrap gap-3 text-sm text-gray-600">
                                                                    <span class="flex items-center">
                                                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                                                        </svg>
                                                                        {{ workoutExercise.sets }} serie
                                                                    </span>
                                                                    <span>×</span>
                                                                    <span>{{ workoutExercise.reps }} rip</span>
                                                                    {% if workoutExercise.weight %}
                                                                        <span>• {{ workoutExercise.weight }}</span>
                                                                    {% endif %}
                                                                    {% if workoutExercise.restTime %}
                                                                        <span>• Rec: {{ workoutExercise.restTime }}s</span>
                                                                    {% endif %}
                                                                    {% if workoutExercise.tempo %}
                                                                        <span>• Tempo: {{ workoutExercise.tempo }}</span>
                                                                    {% endif %}
                                                                </div>
                                                                {% if workoutExercise.notes %}
                                                                    <p class="mt-2 text-sm text-gray-600 italic">{{ workoutExercise.notes }}</p>
                                                                {% endif %}
                                                            </div>
                                                            <form method="post" action="{{ path('pt_workout_plan_remove_exercise', {planId: plan.id, exerciseId: workoutExercise.id}) }}" class="ml-4">
                                                                <button type="submit" class="text-red-600 hover:text-red-800" onclick="return confirm('Rimuovere questo esercizio?')">
                                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                                    </svg>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <p class="text-gray-500 text-sm italic">Nessun esercizio per questa settimana</p>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="border-t pt-6 mt-6">
                <a href="{{ path('pt_workout_plans') }}" class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg inline-block">
                    ← Torna ai Piani
                </a>
            </div>
        </div>
    </div>

    {# Sidebar - Add exercise #}
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
            <h4 class="text-md font-semibold mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Aggiungi Esercizio
            </h4>

            <form method="post" action="{{ path('pt_workout_plan_add_exercise', {id: plan.id}) }}" id="addExerciseForm">
                <div class="space-y-4">
                    {# Exercise selection #}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Categoria</label>
                        <select id="categoryFilter" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            <option value="">Tutte le categorie</option>
                            {% for category in categories %}
                                <option value="{{ category }}">{{ category|capitalize }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Esercizio *</label>
                        <select name="exerciseId" id="exerciseSelect" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                            <option value="">Seleziona un esercizio</option>
                            {% for exercise in exercises %}
                                <option value="{{ exercise.id }}" data-category="{{ exercise.category }}">
                                    {{ exercise.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Week and day #}
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Settimana *</label>
                            <select name="week" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                {% for w in 1..plan.weeksCount %}
                                    <option value="{{ w }}">{{ w }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Giorno *</label>
                            <select name="dayOfWeek" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                                <option value="1">Lunedì</option>
                                <option value="2">Martedì</option>
                                <option value="3">Mercoledì</option>
                                <option value="4">Giovedì</option>
                                <option value="5">Venerdì</option>
                                <option value="6">Sabato</option>
                                <option value="7">Domenica</option>
                            </select>
                        </div>
                    </div>

                    {# Sets and reps #}
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Serie *</label>
                            <input type="number" name="sets" value="3" min="1" max="20" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Ripetizioni *</label>
                            <input type="text" name="reps" value="10" placeholder="es. 10 o 8-12" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    {# Weight and rest #}
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Carico</label>
                            <input type="text" name="weight" placeholder="es. 60kg" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Recupero (sec)</label>
                            <input type="number" name="restTime" value="60" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    {# Tempo #}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Tempo</label>
                        <input type="text" name="tempo" placeholder="es. 3-0-1-0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <p class="text-xs text-gray-500 mt-1">Eccentrica-Pausa-Concentrica-Pausa</p>
                    </div>

                    {# Notes #}
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Note</label>
                        <textarea name="notes" rows="2" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Note aggiuntive..."></textarea>
                    </div>

                    <button type="submit" class="w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors">
                        Aggiungi Esercizio
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Filter exercises by category
document.getElementById('categoryFilter').addEventListener('change', function() {
    const category = this.value;
    const exerciseSelect = document.getElementById('exerciseSelect');
    const options = exerciseSelect.querySelectorAll('option');

    options.forEach(option => {
        if (option.value === '') {
            option.style.display = 'block';
            return;
        }

        if (category === '' || option.dataset.category === category) {
            option.style.display = 'block';
        } else {
            option.style.display = 'none';
        }
    });

    // Reset selection if current selection is hidden
    if (exerciseSelect.value && exerciseSelect.selectedOptions[0].style.display === 'none') {
        exerciseSelect.value = '';
    }
});
</script>
{% endblock %}
